{
  "name": "МойСклад для Gmail",
  "description": "Интеграция Gmail с МойСклад",
  "version": "0.1.0",
  "icons": {
    "128": "res/icons/moysklad-gmail-128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": [
        "vendor/inboxsdk.js",
        "vendor/domjs.js",
        "vendor/kefir.min.js",
        "src/content/gmail.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://online.moysklad.ru/app/*"
      ],
      "js": [
        "vendor/moysklad-client.js",
        "vendor/moysklad-router.js",
        "src/content/moysklad.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "https://online.moysklad.ru/app/*"
  ],
  "manifest_version": 2
}
